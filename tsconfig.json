{
  "compilerOptions": {
    "pretty": true,
    "typeRoots": ["./node_modules/@types"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "target": "es5",
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": "src",
    "jsx": "react",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib", "**/*.spec.tsx", "**/*.spec.ts"]
}
